    </style>
    <style name="EngineerButton.Etc" parent="@style/EngineerButton">
        <item name="android:textSize">@dimen/eng_etc_font_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:tag">ETC</item>
        <item name="android:textScaleX">0.7</item>
    </style>
    <style name="EngineerButton.Func" parent="@style/EngineerButton">
        <item name="android:textSize">@dimen/eng_etc_font_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:tag">DIGIT</item>
        <item name="android:textScaleX">0.7</item>
    </style>
    <style name="EngineerButton.Spc" parent="@style/EngineerButton">
        <item name="android:textSize">@dimen/eng_spc_font_size</item>
