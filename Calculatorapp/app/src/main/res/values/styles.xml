<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EngineerButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0.100000024dip</item>
        <item name="android:layout_width">51.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">1.0dip</item>
    </style>
    <style name="EngineerButton.Calc" parent="@style/EngineerButton">
        <item name="android:textSize">@dimen/eng_etc_font_size</item>
        <item name="android:tag">CALC</item>
    </style>
    <style name="EngineerButton.Calc2" parent="@style/EngineerButton">
        <item name="android:textSize">@dimen/eng_etc_font_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:tag">CALC2</item>
        <item name="android:textScaleX">1.3</item>
    </style>
    <style name="EngineerButton.Clear" parent="@style/EngineerButton">
        <item name="android:textSize">@dimen/eng_etc_font_size</item>
