    <style name="EngineerInputEditCalc1" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/eng_edit1_font_size</item>
    </style>
    <style name="EngineerInputEditCalc2" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/eng_edit2_font_size</item>
    </style>
    <style name="EnginneerInfoButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/slide_btn_font_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/slide_btn_width_size</item>
        <item name="android:layout_height">@dimen/slide_btn_height_size</item>
        <item name="android:layout_margin">0.100000024dip</item>
